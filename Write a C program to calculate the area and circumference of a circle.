5.//calculate the area and circumference of a circle.
#include <stdio.h>
float pi=3.14159;

int main()
{
 float radius , area, circumfrence;
 printf("Enter the radius of circle:");
 scanf("%f", &radius);
 area=pi*radius*radius;
 circumfrence=2*pi*radius;

printf("the area of the circle: %.2f\n",area);
 printf("the circumfrence of the circle: %.2f", circumfrence);
    
    return 0;
}
