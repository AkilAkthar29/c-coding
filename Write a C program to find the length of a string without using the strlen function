#include <stdio.h>

int main() {
    char str[100];
    int length = 0;

    // Input the string
    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);

    // Calculate the length
    while (str[length] != '\0' && str[length] != '\n') {
        length++;
    }

    // Output the length
    printf("Length of the string: %d\n", length);
    
    return 0;
}
