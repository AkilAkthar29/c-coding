3.


// find the size of int, float, double, and char data types
#include <stdio.h>
int main()
{
int a;
float b;
char c;
double d;
printf("the size of integer is  %ld \n", sizeof(a));
printf("the size of float is %ld \n", sizeof(b));
printf("the size of char is %ld \n", sizeof(c));
printf("the size of double is %ld ", sizeof(d));

return 0;
}
